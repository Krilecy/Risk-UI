# Risk UI Cloud Run Deployment Environment Configuration
# ================================================
# 
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control
#
# ================================================

# Google Cloud Configuration
# --------------------------
# Your Google Cloud project ID
PROJECT_ID=your-project-id-here

# Google Cloud region for deployment
REGION=europe-west4

# Artifact Registry configuration
ARTIFACT_REGISTRY=europe-west4-docker.pkg.dev/your-project-id/risk

# Service Configuration
# ---------------------
# Cloud Run service name for the Risk UI
SERVICE_NAME=risk-ui

# Docker image name and tag
IMAGE_NAME=risk-ui
IMAGE_TAG=latest

# Risk API Server Configuration
# -----------------------------
# Base URL for the Risk API server
RISK_API_SERVER=https://risk-api-server-<project-number>.europe-west4.run.app

# Cloud Run Configuration
# -----------------------
# Memory allocation (e.g., 512Mi, 1Gi, 2Gi)
MEMORY=512Mi

# CPU allocation (e.g., 1, 2)
CPU=1

# Maximum number of instances
MAX_INSTANCES=10

# Request timeout in seconds
TIMEOUT=300

# Port (usually 8080 for Cloud Run)
PORT=8080

# Allow unauthenticated access (true/false)
ALLOW_UNAUTHENTICATED=true

# ================================================ 